<h4>Order Details</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Discount</th>
            <th>Total Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderDetail in Model.OrderDetails)
        {
            <tr>
                <td>@orderDetail.Productid</td>
                <td>@orderDetail.Unitprice</td>
                <td>@orderDetail.Qty</td>
                <td>@orderDetail.Discount</td>
                <td>@orderDetail.TotalValue</td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Orderid" style="width:120px"> </a> |
    <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary" style="width:120">
        Back To List
    </a>
</div>

