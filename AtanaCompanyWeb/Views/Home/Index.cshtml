@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-4 mb-4">
    <h1 class="display-4">Welcome to the AtanaWebCompany Logistic</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 text-center">
            <h2 style="font-weight: bold; color: green;">Top Products - Top seller!</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.TopProducts)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6 text-center">
            <h2 style="font-weight: bold; color: red;">Top Orders - Priority table!</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Quantity</th>
                        <th>Order Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.TopOrders)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.Quantity</td>
                            <td>@order.OrderStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
